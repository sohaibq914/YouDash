{
  "manifest_version": 3,
  "name": "Blocked Categories Extension",
  "version": "1.0",
  "description": "A Chrome extension to manage blocked YouTube categories.",
  "action": {
    "default_popup": "index.html", 
    "default_title": "Blocked Categories"
  },
  "permissions": [
    "storage",        
    "activeTab",     
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"],
      "css": ["blockpopup.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ]
}
